@page
@model Batman_01.Pages.ContactanosModel
@{
    ViewData["Title"] = "Contactanos";
}

    <div class="container">

        <div class="textForm text-center mt-4">
            <h1>Contactanos</h1>
        </div>
            
        <div class="text-center">
            <p class="textForm">Cualquier consulta o inquietud puede contactanos llenado el siguiente formulario!</p>
        </div>
            
        <div class="row">
            <form class="formContact">

                <div>
                    <label for="nombre">Nombre:</label>
                    <input class="form-control" id="nombre" type="text" name="nombre" />
                </div>
               
                <div>
                    <label for="email">Email:</label>
                    <input class="form-control" id="email" type="text" name="email" />
                </div>

                <div class="mt-3">
                    <label>
                        <input type="checkbox"> Recordarme
                    </label>
                </div>    

                <div class="text-center">
                    <button type="submit" class="btn btn-dark botonForm ">Enviar</button>
                </div>
            </form>
        </div>        
    </div>


